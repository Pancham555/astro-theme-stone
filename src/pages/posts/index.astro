---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import PostCard from "../../components/shared/post-card.astro";

const posts = await getCollection("posts");
---

<Layout title="Posts Â· Tau Labs" description="All posts and stories from us.">
  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <h1 class="text-4xl sm:text-5xl font-medium tracking-tight text-center mb-16">
        Latest Posts
      </h1>

      <div class="grid gap-12 sm:grid-cols-2 lg:grid-cols-3">
        {posts.map((post) => (
          <PostCard post={post} />
        ))}
      </div>
    </div>
  </section>

  <style is:global>
    a.menu-item {
      position: relative;
      color: #000;
    }

    a.menu-item::before {
      content: "";
      position: absolute;
      width: 100%;
      height: 2px;
      bottom: 0;
      transform-origin: right;
      transform: scaleX(0);
      transition: transform 0.3s ease-in-out, background-color 0.3s ease-in-out;
      background-color: currentColor;
    }

    .dark a.menu-item {
      color: #fff;
    }

    a.menu-item:hover::before {
      transform: scaleX(1);
      transform-origin: left;
    }

  </style>
</Layout>
